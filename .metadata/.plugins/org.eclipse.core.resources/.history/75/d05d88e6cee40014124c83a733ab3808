package com.network.social.repositoryImpl;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import com.network.social.repository.LoginServiceRepo;


public class LoginServiceRepoImpl implements LoginServiceRepo {

	public boolean loginValidationRepo(){
		System.out.println("in repo method");
		
		try {
			System.out.println("in try");
			Class.forName("com.mysql.jdbc.Driver");
			Connection connection = DriverManager.getConnection("jdbc:mysql:// localhost:3306/db1","root","kanishka");
			Statement statement = connection.createStatement();
			ResultSet resultSet = statement.executeQuery("select * from userDemo");
			while (resultSet.next()) {
			String tableName = resultSet.getString(1);
			System.out.println("Table name : " + tableName);
			}
			connection.close();
			} catch (ClassNotFoundException e) {
				System.out.println("in class not founnd exception");
			e.printStackTrace();
			} catch (SQLException e) {
				System.out.println("in sql exception");
			e.printStackTrace();
			}
		
		return true;
	}
}
